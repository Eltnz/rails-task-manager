<h1>My Tasks</h1>

<ul style="list-style-type:none">
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
        <li > <input type="checkbox" id="scales" name="scales" checked> <%= link_to task.title, task_path(task.id) %> </li>
      <% else %>
        <li> <input type="checkbox" id="scales" name="scales" unchecked> <%= link_to task.title, task_path(task.id) %> </li>
      <% end %>
  <% end %>
</ul>




